<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/join_activity"
    tools:context=".view.JoinActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                android:background="@android:color/transparent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="회원가입"
                android:textSize="20dp"
                android:textColor="@color/purple"/>
        </FrameLayout>
    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/join_id_edt"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/edit_text_round"
                        android:layout_marginTop="30dp"
                        android:hint="   아이디(이메일)"
                        android:textSize="13dp"/>
                    <Button
                        android:id="@+id/check_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="중복확인"
                        android:textColor="@color/purple"
                        android:background="@color/transparent"
                        android:layout_marginTop="25dp"
                        android:layout_gravity="end"/>
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/join_password_edt"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/edit_text_round"
                        android:layout_marginTop="20dp"
                        android:hint="   비밀번호"
                        android:inputType="textPassword"
                        android:textSize="13dp"/>
                    <ImageView
                        android:id="@+id/password_check_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:scaleType="fitEnd"
                        android:layout_gravity="end|bottom"
                        />
                </FrameLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textSize="13dp"
                android:text="비밀번호는 영문/숫자/특수문자(~!@#$) 를 혼합하여 8~20자로 입력하세요." />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/join_password_check_edt"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/edit_text_round"
                        android:layout_marginTop="20dp"
                        android:hint="   비밀번호 확인"
                        android:inputType="textPassword"
                        android:textSize="13dp"/>
                    <ImageView
                        android:id="@+id/password_valid_check_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:scaleType="fitEnd"
                        android:layout_gravity="end|bottom"
                        />
                </FrameLayout>
            </LinearLayout>
            <EditText
                android:id="@+id/join_name_edt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edit_text_round"
                android:layout_marginTop="20dp"
                android:hint="   이름"
                android:textSize="13dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/join_nick_name_edt"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/edit_text_round"
                        android:layout_marginTop="20dp"
                        android:hint="   닉네임"
                        android:textSize="13dp"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="중복확인"
                        android:textColor="@color/purple"
                        android:background="@color/transparent"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="end"/>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <Button
        android:id="@+id/join_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/join_button_round"
        android:text="가입하기"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:layout_gravity="bottom"/>
</LinearLayout>