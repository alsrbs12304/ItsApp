<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/news_fragment"
    android:orientation="vertical"
    android:background="@color/gray300"
    tools:context=".view.fragment.IssueFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TODAY'S STORY"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:fontFamily="@font/nanum_barun_gothic"
                android:textStyle="bold"
                android:layout_gravity="left"/>
        </androidx.appcompat.widget.Toolbar>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/bottom_navigation_view"
            android:background="@color/gray500" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <com.google.android.material.tabs.TabLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:tabTextColor="@color/black"
                >
                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="랭킹"
                    />
                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="뉴스"
                    />
                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="블로그 후기"
                    />
            </com.google.android.material.tabs.TabLayout>
            <TextView
                android:id="@+id/recent_news_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="관심 제품 최신 뉴스로 확인하세요!"
                android:textColor="@color/black"
                android:fontFamily="@font/google_sans"
                android:textSize="20dp"
                android:gravity="left"
                android:textStyle="bold"
                android:drawableRight="@drawable/arrow_right_foreground"
                android:background="@color/white"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/news_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray300" />
            <TextView
                android:id="@+id/tips_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tips"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:gravity="left"
                android:textStyle="bold"
                android:background="@color/white"
                android:layout_marginTop="6dp"
                android:drawableRight="@drawable/arrow_right_foreground"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/blog_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray300" />
            <TextView
                android:id="@+id/rank_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="랭킹"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:gravity="left"
                android:textStyle="bold"
                android:background="@color/white"
                android:layout_marginTop="6dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="성별"
                    android:textColor="@color/black"
                    android:fontFamily="@font/google_sans"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="브랜드별"
                    android:textColor="@color/black"
                    android:fontFamily="@font/google_sans"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="연령별"
                    android:textColor="@color/black"
                    android:fontFamily="@font/google_sans"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="직업별"
                    android:textColor="@color/black"
                    android:fontFamily="@font/google_sans"
                    />
            </LinearLayout>
            <com.github.mikephil.charting.charts.RadarChart
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>